        plate = 1839
        mjd = 53471
        fiber = 310
        ax.set_title('Reference vs. Mystery Galaxy 3 Spectra')
    if w6 == 'Mystery Galaxy 4':
        plate = 2121
        mjd = 54180
        fiber = 523
        ax.set_title('Reference vs. Mystery Galaxy 4 Spectra')
    spec2 = fetch_sdss_spectrum(plate, mjd, fiber)
